<%= simple_form_for [@cocktail] do |f| %>
  <%= f.input :name %>
  <%= f.input :url, label: "URL" %>
  <%= f.input :description %>
  <%= f.submit "Add the cocktail", class: "btn btn-primary" %>
  <button type="button" class="btn btn-primary"><%= link_to "Back to main page", cocktails_path %></button>
<% end %>
